    div(style="background: url(land.jpg) no-repeat center center fixed;-webkit-background-size: cover;background-size:cover;-moz-background-size:cover")
        section.box(id="experience")
            div(style="text-align:center")
                span(class="fa-stack fa-5x")
                    i(class="fa fa-square fa-stack-2x")
                    i(class="fa fa-road fa-stack-1x fa-inverse ")
                h1 EXPERIENCE

            .panel-group(id="accor")
                .panel.panel-default(ng-repeat="exp in experience")
                    .panel-heading.hoov(style-exp="{{experience.indexOf(exp)}}")
                            //p(data-toggle="collapse", data-parent="#accor", href="#theone",onclick="return false;") CrashTEst
                            .row.grow(data-toggle="collapse", data-parent="#accor", href="#the{{experience.indexOf(exp)}}",onclick="return false;")
                                .col-xs-1
                                .col-xs-1
                                    h1 {{exp.year}}
                                .col-xs-1
                                .col-xs-3(style="text-align:right;")
                                    h2 {{exp.nom}}
                                    p(style="font-size:15px") {{exp.duree}}, from {{exp.date_debut}} to {{exp.date_fin}}
                                    p(style="font-size:10px;font-style:italic") {{exp.website}}
                                .col-xs-5(style="margin-left:30px;border-left:1px dashed white;")
                                    h2 {{exp.titre}}
                                    p(style="font-size:15px;font-style:italic") {{exp.soustitre}}

                    div.panel-collapse.collapse(id="the{{experience.indexOf(exp)}}")
                        .panel-body
                            .row
                                .col-xs-6
                                    p(style="font-size:18px") {{exp.description}}
                                .col-xs-6
                                    .panel.panel-default.specific(style="border-radius: 5px;")
                                        .panel-body
                                            p Image explicative
                            h2 Context
                            p(style="font-size:18px")  {{exp.contexte}}
                            br
                            h2 Skills
                            .col-md-2(ng-repeat="skill in exp.skills", style="margin-bottom:10px")
                                .panel.panel-default.specific(style="border-radius: 5px;")
                                    .panel-body
                                        h5(style="text-align:center") {{skill.nom}}


        .emptyBox(style="height:500px;background:inherit")

    div(style="background: url(land.jpg) no-repeat center center fixed; -webkit-background-size: cover;background-size:cover;-moz-background-size:cover")
        section.box(id="skills")
            div(style="text-align:center")
                span(class="fa-stack fa-5x")
                    i(class="fa fa-square fa-stack-2x")
                    i(class="fa fa-keyboard-o fa-stack-1x fa-inverse ")
                h1 COMPUTER SKILLS
            h2(style="margin-bottom:20px") Computer Skills
            h4 Langages
            hr(class="style-three")
            .row
                button.btn.btn-default.col-md-2(ng-repeat="skill in skillLangages",style="margin-left:10px; margin-bottom:10px") {{skill.nom}}
                    br
                    .progress.progress-striped.active(style="margin-top:20px")
                        .progress-bar(style="width:{{skill.niveau}}%")

            h4 Front-end
            hr(class="style-three")
            .row
                button.btn.btn-default.col-md-2(ng-repeat="skill in skillFront",style="margin-left:10px; margin-bottom:10px") {{skill.nom}}
                    br
                    .progress.progress-striped.active(style="margin-top:20px")
                        .progress-bar(style="width:{{skill.niveau}}%")

            h4 Back-end
            hr(class="style-three")
            .row
                button.btn.btn-default.col-md-2(ng-repeat="skill in skillFront",style="margin-left:10px; margin-bottom:10px") {{skill.nom}}
                    br
                    .progress.progress-striped.active(style="margin-top:20px")
                        .progress-bar(style="width:{{skill.niveau}}%")

            h4 Other
            hr(class="style-three")
            .row
                .col-xs-5
                    h5 Versionning
                    button.btn.btn-default.col-md-4(ng-repeat="skill in skillVersion",style="margin-left:10px; margin-bottom:10px") {{skill.nom}}
                        br
                        .progress.progress-striped.active(style="margin-top:20px")
                            .progress-bar(style="width:{{skill.niveau}}%")
                .col-xs-5
                    h5 Methodologies
                    button.btn.btn-default.col-md-4(ng-repeat="skill in skillMethod",style="margin-left:10px; margin-bottom:10px") {{skill.nom}}
                        br
                        .progress.progress-striped.active(style="margin-top:20px")
                            .progress-bar(style="width:{{skill.niveau}}%")
            .row
                .col-xs-5
                    h5 Librairies
                    button.btn.btn-default.col-md-4(ng-repeat="skill in skillLib",style="margin-left:10px; margin-bottom:10px") {{skill.nom}}
                        br
                        .progress.progress-striped.active(style="margin-top:20px")
                            .progress-bar(style="width:{{skill.niveau}}%")
                .col-xs-5
                    h5 Tools
                    button.btn.btn-default.col-md-4(ng-repeat="skill in skillTools",style="margin-left:10px; margin-bottom:10px") {{skill.nom}}
                        br
                        .progress.progress-striped.active(style="margin-top:20px")
                            .progress-bar(style="width:{{skill.niveau}}%")

        .emptyBox(style="height:500px;background:inherit")

